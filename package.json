{
  "name": "museeker-www",
  "version": "0.0.1",
  "author": "JosÃ© Manuel Aguirre",
  "license": "MIT",
  "scripts": {
    "b1": "rimraf dist",
    "b2a": "cpy '../_root/public/*.html' dist",
    "b2b": "cpy '../_root/public/*.json' dist",
    "b2": "npm run b2a && npm run b2b",
    "b3a": "cpy '../_root/public/icons' dist/icons",
    "b3b": "cpy '../_root/public/splash' dist/splash",
    "b3": "npm run b3a && npm run b3b",
    "b4": "parcel build ../_root/public/sw.js && parcel build ./src/client/app.js",
    "build": "NODE_ENV=production npm run b1 && npm run b2 && npm run b3 && npm run b4",

    "git-i1": "git add .",
    "git-i2": "git diff-index --quiet HEAD || git commit -m 'Initial commit'",
    "git-i3": "git push",
    "git-initial": "npm run git-i1 && npm run git-i2 && npm run git-i3",

    "git-pack": "npm run update-jmaguirrei && npm run build && npm run git-initial",

    "i1": "npm install --save @jmaguirrei/belt",
    "i2": "npm install --save @jmaguirrei/ui",
    "i3": "npm install --save @jmaguirrei/store",
    "i4": "npm install --save @jmaguirrei/server",
    "i-prod": "npm install && npm run i1 && npm run i2 && npm run i3 && npm run i4",
    "update-jmaguirrei": "ncu -u '/^@jmaguirrei.*$/'",

    "browser": "parcel --no-hmr ./public/app.js ../_root/public/sw.js",
    "start-dev": "nodemon start-dev.js",
    "start-prod": "node start-prod.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0"
  },
  "dependencies": {
    "@jmaguirrei/belt": "0.0.14",
    "@jmaguirrei/server": "0.0.49",
    "@jmaguirrei/store": "0.0.41",
    "@jmaguirrei/ui": "0.0.76",
    "@sendgrid/mail": "^6.3.1"
  }
}
